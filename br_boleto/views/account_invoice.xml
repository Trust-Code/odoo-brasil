<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_br_boleto_invoice_form" model="ir.ui.view">
        <field name="name">br_boleto.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="br_account.view_br_account_invoice_form"/>
        <field name="arch" type="xml">
            <button name="action_view_edocs" position="after">
                 <button name="action_register_boleto" type="object" class="oe_stat_button" icon="fa-file-pdf-o" string="Gerar Boleto"/>
            </button>
            <tree name="vencimentos" position="inside">
                <button name="action_generate_boleto" type="object" string="Boletos" icon="fa-barcode"/>
            </tree>
            <field name="date_maturity" position="before">
                <field name="payment_mode_id" />
            </field>
            <field name="payment_term_id" position="after">
                <field name="payment_mode_id" />
            </field>
        </field>
    </record>

</odoo>
