<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_email_boleto" model="ir.ui.view">
        <field name="name">res_config_settings.email.boleto</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="br_account.account_config_settings_email_templates"/>
        <field name="arch" type="xml">
            <div id="mail_templates" position="inside" >
                <div id="mail_template_boleto" class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="boleto_email_tmpl" string="Modelo de e-mail envio boleto"/>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."/>
                        <div class="text-muted">
                            Modelo a ser utilizado no envio de boleto automatizado
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="boleto_email_tmpl" string="Modelo" class="col-md-3 o_light_label"/>
                                <field name="boleto_email_tmpl" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
