<odoo>

  <record id="delivery_correios_product_template_medidas" model="ir.ui.view">
    <field name="name">delivery_correios.product_template.medidas</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view" />
    <field name="arch" type="xml">
      <group name="group_lots_and_weight" position="inside">
        <label for="comprimento"/>
        <div class="o_row" name="comprimento">
          <field name="comprimento" string="Comprimento"/>
          <span>cm</span>
        </div>
        <label for="largura"/>
        <div class="o_row" name="largura">
          <field name="largura" string="Largura"/>
          <span>cm</span>
        </div>
        <label for="altura"/>
        <div class="o_row" name="altura">
          <field name="altura" string="Altura"/>
          <span>cm</span>
        </div>
      </group>
    </field>
  </record>
</odoo>
