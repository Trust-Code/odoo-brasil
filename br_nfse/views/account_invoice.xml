<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_br_nfse_account_invoice_form" model="ir.ui.view">
        <field name="name">view_br_nfse.account.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="br_account.view_br_account_invoice_form"/>
        <field name="arch" type="xml">
            <div class="alert alert-info" position="after">
                <field name="ambiente_nfse" invisible="1" />
                <field name="invoice_model" invisible="1" />
                <div class="alert alert-danger" role="alert" style="margin-bottom:0px;"
                    attrs="{'invisible': ['|', ('ambiente_nfse', '==', '1'), ('invoice_model', '!=', '001')]}">
                    A Nota Fiscal Paulistana está em ambiente de homologação
                </div>
            </div>
            <div name="button_box" position="inside">
                <button name="action_preview_danfse" type="object" class="oe_stat_button" icon="fa-file-pdf-o"
                    string="Visualizar Danfse" attrs="{'invisible': ['|', ('state', '==', 'draft'), ('invoice_model', '!=', '001')]}">
                </button>
            </div>
        </field>
    </record>

    <record id="account_cust_invoice_inherit_remove_required" model="ir.ui.view">
        <field name="name">account_invoice_line_form_view</field>
        <field name="model">account.invoice.line</field>
        <field name="inherit_id" ref="br_account.view_br_account_invoice_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pis_cst']" position="after">
                <field name="is_cust_invoice" invisible="1"/> 
                <field name="is_supp_invoice" invisible="1"/> 
            </xpath>
            <!--<xpath expr="//field[@name='pis_cst']" position="replace">-->
                <!--<field name="pis_cst" attrs="{'required':[('is_cust_invoice','!=',True),('is_supp_invoice','!=',False)]}"/>-->
            <!--</xpath>-->
            <!--<xpath expr="//field[@name='cofins_cst']" position="replace">-->
                <!--<field name="cofins_cst" attrs="{'required':[('is_cust_invoice','!=',True),('is_supp_invoice','!=',False)]}"/>-->
            <!--</xpath>-->
        </field>
    </record>

</odoo>
