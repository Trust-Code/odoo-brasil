<odoo>

  <record id="view_account_move_form" model="ir.ui.view">
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <div name="button_box" position="inside">
        <button name="action_view_edocs" type="object" class="oe_stat_button" icon="fa-file-text-o"
            context="{ 'search_default_mocw_id': id }"
            attrs="{'invisible': [('total_edocs', '=', 0)]}">
             <field name="total_edocs" /> <span> NFEs</span>
        </button>
      </div>
      <button name="action_register_payment" position="before">
        <button name="action_create_eletronic_document" type="object" string="Criar nota fiscal" attrs="{'invisible':['|', ('state', '!=', 'posted'), ('l10n_br_edoc_policy', '=', 'directly')]}" class="oe_highlight" groups="base.group_user"/>  
      </button>
      <field name="fiscal_position_id" position="after">
        <field name="l10n_br_edoc_policy" />
      </field>
    </field>
  </record>

  <record id="view_move_form_l10n_br_carrier_form" model="ir.ui.view">
      <field name="name">account.move.form.l10n.br.sale</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
          <xpath expr="//page[@id='aml_tab']" position='after'>
              <page id="carrier_tab" string="Transportadora" groups="account.group_account_user">
                  <group id="carrier_tab_group">
                      <group string="Informações da Transportadora">
                          <field name="carrier_partner_id"/>
                          <field name="modalidade_frete"/>
                          <field name="quantidade_volumes"/>
                          <field name="peso_bruto"/>
                      </group>
                  </group>
              </page>
          </xpath>
      </field>
  </record>

</odoo>
