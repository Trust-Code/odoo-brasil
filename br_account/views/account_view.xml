<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_br_account_journal_diary_form" model="ir.ui.view">
        <field name="name">view.br_account_journal.diary.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <page name="bank_account" position="replace">
                <page name="bank_account" string="Bank Account" attrs="{'invisible': [('type', '!=', 'bank')]}">
                    <group col="4">
                        <field name="acc_partner_id"/>
                        <field name="bank_id"/>
                        <field name="bank_acc_number"/>
                        <field name="bank_acc_number_dig"/>
                        <field name="bank_agency_number"/>
                        <field name="bank_agency_dig"/>
                        <field name="bank_currency_id"/>
                        <field name="bank_statements_source" widget="radio" attrs="{'required': [('type', '=', 'bank')]}"/>
                        <field name="display_on_footer"/>
                    </group>
                </page>
            </page>
        </field>
    </record>
    
    <record id="view_br_account_journal_config_form" model="ir.ui.view">
        <field name="name">view.br_account_journal.config.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_bank_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[contains(@class, 'oe_title')]" position="replace">
                <div class="oe_title">
                    <h1><field name="bank_ofx_acc_number" readonly="True"/></h1>
                </div>
            </xpath>
            <field name="bank_id" position="before">
                <field name="acc_partner_id"/>
            </field>
            <field name="bank_id" position="after">
                <field name="bank_acc_number" required="1"/>
                <field name="bank_acc_number_dig"/>
                <field name="bank_agency_number"/>
                <field name="bank_agency_dig"/>
            </field>
            <field name="display_on_footer" position="before">
                <field name="bank_currency_id"/>
            </field>
        </field>
    </record>

</odoo>
